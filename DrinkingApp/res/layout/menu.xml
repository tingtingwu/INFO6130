<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7b9aad"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="#7b9aad"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/menu_top_buttons"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="3"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bMenuTracking"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/trackingmenubutton"
                android:text="" />

            <Button
                android:id="@+id/bMenuAssessment"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/assessmenubutton"
                android:text="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bMenuVisualize"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/visualizemenubutton"
                android:text="" />

            <Button
                android:id="@+id/bMenuSettings"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/settingsmenubutton"
                android:text="" />
        </LinearLayout>

        <Button
            android:id="@+id/bMenuResources"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="@string/resourcebutton"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</LinearLayout>